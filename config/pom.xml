        <plugins>
            <plugin>
                <groupId>no.nav.maven.plugins</groupId>
                <artifactId>aura-maven-plugin</artifactId>
                <version>6.1.48</version>
                <configuration>
                    <apps>${project.parent.artifactId}:${project.version}</apps>
