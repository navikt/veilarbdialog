type Query {
    dialoger(fnr: String!, bareMedAktiviteter: Boolean = false): [DialogDTO],
    stansVarsel(fnr: String!): GjeldendeEskaleringsvarselDto
}

type GjeldendeEskaleringsvarselDto {
    id: Int,
    tilhorendeDialogId: Int,
    opprettetAv: String,
    opprettetDato: ZonedDateTime,
    opprettetBegrunnelse: String
}

scalar Date

scalar ZonedDateTime

enum Egenskap {
    ESKALERINGSVARSEL
    PARAGRAF8
}

enum Avsender {
    BRUKER
    VEILEDER
}

type HenvendelseDTO {
    id: String
    dialogId: String
    avsender: Avsender
    avsenderId: String
    sendt: Date
    lest: Boolean
    viktig: Boolean
    tekst: String
}

type DialogDTO {
    id: String
    aktivitetId: String
    overskrift: String
    sisteTekst: String
    sisteDato: Date
    opprettetDato: Date
    historisk: Boolean
    lest: Boolean #// lest av brukertype som gj√∏r kall

#    // veileder-felter
    venterPaSvar: Boolean
    ferdigBehandlet: Boolean
    lestAvBrukerTidspunkt: Date
    erLestAvBruker: Boolean

    oppfolgingsperiode: String

    henvendelser: [HenvendelseDTO]
    egenskaper: [Egenskap]
}